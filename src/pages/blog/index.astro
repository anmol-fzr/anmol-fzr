---
import Layout from "../../layouts/layout.astro";
import BlogCard from "../../components/Blog/BlogCard.astro";
import BlogTitle from "../../components/Typo/BlogTitle.astro";
import { getAllPublishedBlogs } from "../../utils"

const allPosts = await getAllPublishedBlogs()
---

<Layout {...{} as any} >
	<section class="min-h-[80vh]" >
		<div class="flex flex-col gap-4 my-2 mb-6"> 
			<BlogTitle>
				Blogs
			</BlogTitle>
		</div>
		<ul class="flex flex-wrap gap-8">
			{allPosts.map(({ slug, data: { heroImage, title, pubDate, description, tags, keywords } },i) => (
					<BlogCard size={i === 0 ? "lg": "sm"}
						{...({ heroImage, title, pubDate, slug ,description, keywords })}
					/>
				))}
		</ul>
    <!-- <Pagination perPage={blogPerPage} total={totalPosts} /> -->
	</section>
</Layout>
