---
import Section from "../Section/Section.astro";
import Heading from "../Heading.astro";

const services = [
  {
    title: "Full Stack Web Developer",
    desc: "I'm a Full-stack web developer who mainly focuses on performance and resource optimisation. I work with modern technologies like NextJS, Tailwind CSS, Tailwind CSS, and NodeJS."
  }
];

---
<Section id="services">
  <div class="flex flex-col gap-16">
    <Heading>What I do?</Heading>
    <div class="flex flex-wrap justify-between">
      {services.map(({  title, desc }) => (
        <div class="flex flex-col flex-1 max-w-md gap-3 ">
          <p class="text-2xl">{title}</p>
          <p>{desc}</p>
        </div>
      ))}
    </div>
  </div>
</Section>
