---
import Input from "../Form/Input/Input.astro"
import Textarea from "../Form/Textarea/Textarea.astro"
import Button from "../Form/Button/Button.astro"
import { contactFields } from "../../consts.ts"
---
    <div class="flex items-center w-full md:w-6/12">
      <form target="_blank" method="POST" class="flex flex-col items-center w-full gap-4">
      <!-- <form target="_blank" action="https://formsubmit.co/ainsa2279@gmail.com" method="POST" class="flex flex-col items-center w-full gap-4"> -->
        <input type="text" name="_honey"  style="display:none;" >
        <input type="hidden" name="_captcha" value="false" >
        <input type="hidden" name="_next"  value="https://anmol-fzr.web.app/" >
        <input type="hidden" name="_template" value="table">
        {
          contactFields.map(({ name, error, placeholder, type, pattern }) => (
            <Input
              label={name}
              {...{ name, pattern, placeholder, type, error }}
            />
          ))
        }
        <Textarea label="Message" placeholder="Message" />
        <button>Submit</button>
      </form>
    </div> 
